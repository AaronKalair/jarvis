#!/usr/bin/env ruby

require File.dirname(__FILE__) + '/../lib/jarvis.rb'

EventMachine::run do
  # hit Control + C to stop
  Signal.trap("INT")  { EventMachine.stop }
  Signal.trap("TERM") { EventMachine.stop }

  EventMachine::start_server "127.0.0.1", 1337, Jarvis::MusicServer
  puts `cowsay -f tux "Welcome to Jarvis."`
end
